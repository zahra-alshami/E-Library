            <div class="col-md-offset-2 col-md-10">
<lable class="label-danger">@ViewBag.DuplicateMessage</lable>            </div>
        </div>
    </div>
         

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="موافق" class="btn btn-default" />
                </div>
            </div>
       
    }

</div>
