@model E_Library.Models.Users

@{
    ViewBag.Title = "signup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>signup</h2>

<style>
    body {
        background-image: url(/Images/createuser.jpg);
        background-size: cover;
        background-repeat: no-repeat;
        margin: 50px;
    }
</style>
<div dir="rtl" style="background-color:rgba(255, 255, 255, 0.49);padding:30px">
    <h2>إنشاء حساب</h2>

    @using (Html.BeginForm())
